<%= render "layouts/main-nav" %>

<div class="container py-5 dash-view">
  <%= render 'layouts/notice' %>
  
  <h1 class="font-weight-bold text-label mb-3 mt-4">Teachers in your area.</h1>
  <p class="mb-5 text-muted">Browse our Teachers directory to see registered teachers in your neighboorhood.</p>

  <div class="row">
    <% @teachers.each do |teacher| %>
      <div class="col-sm-9 col-md-6 col-lg-3">
        <div class="border shadow rounded pb-4 mb-4">
          <div class="bg-light mb-3 pt-4" style="height: 220px;">
            <% if teacher.image.attached? %>
              <%= image_tag teacher.image, style: "width: 150px; height: 150px; display: block; margin: 0 auto", class: "rounded-circle" %>
            <% else %>
              <div class="text-center" style="font-size: 7em;">👩🏽‍🏫</div>
            <% end %>
          </div>
          <div class="text-muted text-center font-weight-bold text-label">
            <%= teacher.name.capitalize %>
          </div>
          <div class="d-flex flex-wrap justify-content-center bg-light border-top mx-4 my-2">
            <div class="my-2 mx-3">
            <% if teacher.grade? %>
              <span class="">🎓</span>
              <small><%= teacher.grade %></small>
            <% end %>
            </div>
            <div class="my-2 mx-3">
            <% if teacher.subject? %>
              <span>📖</span>
              <small><%= teacher.subject %></small>
            <% end %>
            </div>
          </div>
          <div class="text-center mt-3 mb-3">
            <% if current_admin %>
              <%= link_to 'View Profile', teacher, class: "btn bg-green-btn text-white px-3 shadow", style: "font-size: 0.9em" %>
              <%= link_to '<i class="fas fa-pen-alt ml-3"></i>'.html_safe, edit_teacher_path(teacher), class: "text-primary" %>
              <%= link_to '<i class="fas fa-trash ml-3"></i>'.html_safe, teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
