<%= render "layouts/teacherLoginLinks" %>

<p id="notice"><%= notice %></p>

<h1>Teachers in your area</h1>
<p>Find a teacher for your child</p>
<p>Search by class, subject, name or area</p><br />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th>Subject</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.grade %></td>
        <td><%= teacher.subject %></td>
        <td><%= teacher.group.name %></td>
        <td><%= link_to 'Show', teacher %></td>
        <!-- <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
