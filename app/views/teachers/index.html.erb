<%= render "layouts/main-nav" %>

<div class="container py-5 dash-view">
  <%= render 'layouts/notice' %>
  
  <h1 class="font-weight-bold text-label mb-3">Teachers in your area.</h1>
  <p class="mb-5 text-muted">Browse our Teachers directory to see registered teachers in your neighboorhood.</p>

  <div class="row">
    <% @teachers.each do |teacher| %>
      <div class="col-sm-9 col-md-6 col-lg-4">
        <div class="border shadow rounded pb-4 mb-4">
          <div class="bg-light mb-3 border-bottom pt-4" style="height: 250px;">
            <% if teacher.image.attached? %>
              <%= image_tag teacher.image, style: "width: 200px; display: block; margin: 0 auto", class: "rounded-circle" %>
            <% else %>
              <div class="text-center pt-4" style="font-size: 8em;">ğŸ‘©ğŸ½â€ğŸ«</div>
            <% end %>
          </div>
          <div class="text-muted text-center font-weight-bold text-label"><%= teacher.name %></div>
          <div class="d-flex flex-wrap justify-content-center bg-light mx-4 my-2">
            <div class="my-2 mr-5">
            <% if teacher.grade? %>
              <span class="">ğŸ“</span>
              <small><%= teacher.grade %></small>
            <% end %>
            </div>
            <div class="my-2">
            <% if teacher.subject? %>
              <span>ğŸ“–</span>
              <small><%= teacher.subject %></small>
            <% end %>
            </div>
          </div>
          <div class="text-center mt-3 mb-3">
            <%= link_to 'View Profile', teacher, class: "btn bg-green-btn text-white px-3 shadow", style: "font-size: 0.9em" %>
            <% if current_admin %>
              <%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-primary ml-2" %>
              <%= link_to 'Delete', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger ml-2' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
