<%= render "layouts/main-nav" %>

<div class="container py-5 dash-view mt-4 mb-5">
  <%= render 'layouts/notice' %>

  <div class="row border-bottom mb-5">
    <div class="col-lg-9">
      <h3 class="font-weight-bold py-4 text-green">
        <%= link_to @profile.teacher.name, {}, class: 'text-green' %>
      </h3>
    </div>
    <div class="col-lg-3">
      <a href="#" class="btn text-green border mt-4"><i class="far fa-envelope mr-2 text-label"></i>Contact <%= @profile.teacher.name %></a>
      <%= link_to "Send message", conversation_messages_path(@conversation), class: "text-green" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 col-md-6">
      <p>
        Address:<br>
        <div class="bg-light p-3 border rounded">
          <small><%= @profile.teacher.direction.landmark %></small>
        </div>
      </p>
    </div>
    <div class="col-lg-3 col-md-4">
      <p>
        Classes:<br>
        <div class="bg-light p-3 border rounded">
          <small><%= @profile.teacher.grade %></small>
        </div>
      </p>
    </div>
    <div class="col-lg-3 col-md-4">
      <p>
        Subject:<br>
        <div class="bg-light p-3 border rounded">
          <small><%= @profile.teacher.subject %></small>
        </div>
      </p>
    </div>
    <div class="col-lg-3 col-md-4">
      <p>
        Fees:<br>
        <div class="bg-light p-3 border rounded">
          UGX. <%= @profile.fee %>
          <small><%= @profile.per_charge %></small>
        </div>
      </p>
    </div>
    <div class="col-lg-3 col-md-4">
      <p>
        Teaching Experience:<br>
        <div class="bg-light p-3 border rounded">
          <small><%= @profile.experience %> years</small>
        </div>
      </p>
    </div>
    <div class="col-lg-3 col-md-4">
      <p>
        Commitment:<br>
        <div class="bg-light p-3 border rounded">
          <small><%= @profile.commitment %></small>
        </div>
      </p>
    </div>
    <div class="col-lg-3 col-md-4">
      <p>
        Phone:<br>
        <div class="bg-light p-3 border rounded">
          <small><%= @profile.teacher.phone %></small>
        </div>
      </p>
    </div>
  </div>
  <p class="mt-3">
    Profile Description:</br>
    <div class="bg-light p-3 border rounded">
      <%= @profile.description %>
    </div>
  </p>

  <%= link_to 'Update profile', edit_profile_path(@profile), class: "btn bg-green-btn text-white shadow px-5 py-3 mt-3" %>
  <%= link_to 'See other profiles<i class="fas fa-arrow-right ml-2"></i>'.html_safe, profiles_path, class: "btn py-3 mt-3 text-label ml-5", style: "font-size: 1em" %>
</div>
