<%= render 'layouts/main-nav' %>
<div class="container mt-5" style="min-height: 550px">
  <%= render 'layouts/notice2' %>
  <div class="row">
    <div class="col-md-6 col-lg-4 mx-auto">
      <p class="text-center text-info my-5"><%= resource_name.capitalize %> Login</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-3">
          <%= f.email_field :email, autocomplete: "email", class: "form-control input_height", placeholder: "Email address" %>
        </div>

        <div class="field mb-2">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control input_height", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field d-flex justify-content-center mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "ml-2 pt-2 text-muted" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-info button_def form-control mb-4 shadow" %>
        </div>
      <% end %>

      <small><%= render "devise/shared/links" %></small>
    </div>
  </div>
</div>
