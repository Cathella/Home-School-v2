<% if notice %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert" style="position: absolute; top: 120px; left: 25px; z-index: 100;">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
