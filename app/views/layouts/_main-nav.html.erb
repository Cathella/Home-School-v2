  <div class="container">
    <div class="overlay" id="myNav">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">
        &times;
      </a>
      <div class="overlay-content">
        <% if current_teacher %>
          <%= link_to "My Group", teacher_group_path %>
          <%= link_to "My Address", teacher_address_path %>
          <%= link_to "Find a tutor job", posts_path %>
          <%= link_to "Mailbox", conversations_path %>
