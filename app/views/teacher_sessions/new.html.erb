<h1>Teacher Log In</h1>

<%= form_tag teacher_sessions_path do %>
  <div class="field">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, params[:phone] %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %>
