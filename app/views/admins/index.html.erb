      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="p-3" style="border: 3px solid #f0f8ff; border-radius: 6px;">
            <p class="font-weight-bold text-label pt-2">New Teachers</p>
            <table class="w-100">
              <thead class="" style="background: #f0f8ff;">
                <th class="text-label font-weight-normal py-2 pl-4">Name</th>
                <th class="text-label font-weight-normal">Class</th>
                <th class="text-label font-weight-normal pr-4">Date</th>
              </thead>
              <tbody>
                <% @teachers.each do |teacher| %>
                  <tr>
                    <td class="py-3"><%= link_to teacher.name, teacher, class: 'text-info pl-4' %></td>
                    <td class="text-muted">
                      <%= teacher.grade %>
                    </td>
                    <td class="text-muted">
                      <%= teacher.created_at.strftime("%F") %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-6">
          <div class="p-3" style="border: 3px solid #f0f8ff; border-radius: 6px;">
            <p class="font-weight-bold text-label pt-2">New Children</p>
            <table class="w-100">
              <thead class="" style="background: #f0f8ff;">
                <th class="text-label font-weight-normal py-2 pl-4">Name</th>
                <th class="text-label font-weight-normal">Class</th>
                <th class="text-label font-weight-normal pr-4">Date</th>
              </thead>
              <tbody>
                <% @children.each do |child| %>
                  <tr>
                    <td class="py-3"><%= link_to child.name, child, class: 'text-info pl-4' %></td>
                    <td class="text-muted">
                      <%= child.grade %>
                    </td>
                    <td class="text-muted">
                      <%= child.created_at.strftime("%F") %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
