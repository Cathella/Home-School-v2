        <li><%= link_to '<i class="fas fa-star mr-2 bg-info text-white p-1 rounded"></i>Children'.html_safe, children_path %></li>
        <li><%= link_to '<i class="far fa-square mr-2 bg-info text-white p-1 rounded"></i>Teachers'.html_safe, teachers_path %></li>
        <li><%= link_to '<i class="fas fa-circle-notch mr-2 bg-info text-white p-1 rounded"></i>Groups'.html_safe, groups_path %></li>
        <li><%= link_to '<i class="fas fa-shapes mr-2 bg-info text-white p-1 rounded"></i>Addresses (C)'.html_safe, addresses_path %></li>
        <li><%= link_to '<i class="fas fa-moon mr-2 bg-info text-white p-1 rounded"></i>Addresses (T)'.html_safe, directions_path %></li>
        <li><%= link_to "Create a group", new_group_path, class: "btn bg-green-btn text-white px-3 py-2 shadow mt-5" %></li>
      </ul>
    </div>
    <div class="col-md-10 py-5 px-5" style="">
      <%= render 'layouts/notice' %>
