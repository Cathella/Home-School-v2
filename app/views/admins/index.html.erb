      <p class="font-weight-bold text-label">Overview</p>
      <div class="row mb-5">
        <div class="col-md-3">
          <div class="bg-white px-3 pt-3 d-flex" style="border: 3px solid #f0f8ff; border-radius: 6px;">
            <p style="font-size: 2.3em" class="pt-3 text-muted">
              <%= @teacher_count %>
            </p>
            <p class="text-muted">
              <small class="text-uppercase text-info">Teacher(s)</small>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="bg-white px-3 pt-3 d-flex" style="border: 3px solid #f0f8ff; border-radius: 6px;">
            <p style="font-size: 2.3em" class="pt-3 text-muted">
              <%= @child_count %>
            </p>
            <p class="text-muted">
              <small class="text-uppercase text-info">Child(ren)</small>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="bg-white px-3 pt-3 d-flex" style="border: 3px solid #f0f8ff; border-radius: 6px;">
            <p style="font-size: 2.3em" class="pt-3 text-muted">
              <%= @group_count %>
            </p>
            <p class="text-muted">
              <small class="text-uppercase text-info">Group(s)</small>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="bg-white px-3 pt-3 d-flex" style="border: 3px solid #f0f8ff; border-radius: 6px;">
            <p style="font-size: 2.3em" class="pt-3 text-muted">
              <%= @ugrouped_child_count %>
            </p>
            <p class="text-muted">
              <small class="text-uppercase text-info">Ungrouped<br>Child(ren)</small>
            </p>
          </div>
        </div>
