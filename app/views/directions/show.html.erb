<%= render "layouts/main-nav" %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-5">
      <h2 class="font-weight-bold text-label my-5">
        <%= @direction.landmark %>
      </h2>

      <div class="row">
        <div class="col-md-6">
          <p class="text-muted">
            <span class="font-weight-bold text-label">Longitude:</span><br>
            <%= @direction.longitude %>
          </p>
        </div>
        <div class="col-md-6">
          <p class="text-muted">
            <span class="font-weight-bold text-label">Latitude:</span><br>
            <%= @direction.latitude %>
          </p>
        </div>
        <div class="col-md-6 mt-3">
          <p class="text-muted">
            <span class="font-weight-bold text-label">Belongs to:</span><br>
            <%= @direction.teacher.name %>
          </p>
        </div>
        <div class="col-md-6 mt-3">
          <p class="text-muted">
            <span class="font-weight-bold text-label">Account:</span><br>
            Teacher
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-7">
      <%= render "layouts/notice" %>
      
      <div class="bg-info p-5 rounded text-white ml-5 mt-5">
        <h3 class="mb-4 font-weight-bold text-label">Comparing Distances</h3>

        <table class="child-table mt-4">
          <tbody>
            <% @distances.each do |distance| %>
              <tr>
                <td class="">
                  <%= distance %> Meters
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <p class="mt-3"><%= @destination %></p>
      </div>
    </div>
  </div>
</div>