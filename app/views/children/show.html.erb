<%= render "layouts/main-nav" %>

<div class="container py-5 dash-view">
  <div class="row" id="dash">
    <div class="col-md-4 pr-5">
      <div class="mb-5">
        <div class="profile-pic text-center">
          <% if @child.image.attached? %>
            <%= image_tag @child.image, style: "width: 250px; display: block; margin: 0 auto", class: "rounded shadow" %>
          <% end %>
        </div> 

        <% if current_child %>
          <p class="mt-5 text-center">
            I am 
            <%= current_child.name %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <%= render 'layouts/notice' %>
      
      <div class="row">
        <% if current_child %>
        <div class="col-md-12">
          <p class="alert-warning p-3 rounded">
            Adding an Address allows the system to match you with the nearest teachers 
            or group for your children. 
            <%= link_to "Add Address", my_address_path, class: "text-info border-bottom border-info ml-2 font-weight-bold" %>
          </p>
        </div>
        <% end %>
        
        <% if current_admin %>
        <div class="col-md-12 mb-4">
          <div class="bg-light px-3 rounded">
            <div class="d-flex align-items-center">
              <i class="fas fa-user-alt border rounded py-3 text-info px-3 mr-3"></i>
              <p class="pt-4 text-label">
                <strong>Name:</strong><br>
                <%= @child.name %>
              </p>
            </div>
          </div>
        </div>
        <% end %>

        <div class="col-md-6 mb-4">
          <div class="bg-light px-3 rounded">
            <div class="d-flex align-items-center">
              <i class="fas fa-phone-alt border rounded py-3 text-info px-3 mr-3"></i>
              <p class="pt-4 text-label">
                <strong>Parent's Phone</strong><br>
                <%= @child.phone %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <div class="bg-light px-3 rounded">
            <div class="d-flex align-items-center">
              <i class="fas fa-user border rounded py-3 text-info px-3 mr-3"></i>
              <p class="pt-4 text-label">
                <strong>Parent</strong><br>
                <% if @child.guardian? %>
                  <%= @child.guardian %>
                <% else %>
                  Update your profile
                <% end %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <div class="bg-light px-3 rounded">
            <div class="d-flex align-items-center">
              <i class="fas fa-graduation-cap border rounded py-3 text-info px-3 mr-3"></i>
              <p class="pt-4 text-label">
                <strong>Class</strong><br>
                <% if @child.grade? %>
                  <%= @child.grade %>
                <% else %>
                  Update your profile.
                <% end %> 
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <div class="bg-light px-3 rounded">
            <div class="d-flex align-items-center">
              <i class="fas fa-users border rounded py-3 text-info px-3 mr-3"></i>
              <p class="pt-4 text-label">
                <strong>Study Group</strong><br>
                <%= link_to "See your group here.", my_group_path %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to 'Update profile', edit_child_path(@child), class: "btn bg-green-btn text-white shadow px-5 py-3" %>
        <%= link_to 'Registered Students', children_path, class: "btn bg-green-btn bg-light text-label border px-4 py-3" %>
        <%= link_to 'Browse Teachers', teachers_path, class: "btn bg-green-btn bg-light text-label border px-5 py-3" %>
      </div>
    </div>
  </div>
</div>