<%= render "layouts/main-nav" %>

<div class="container py-5 dash-view mt-4">
  <div class="row" id="dash">
    <div class="col-md-4 pr-5">
      <div class="mb-5">
        <div class="text-center border py-3 rounded text-green bg-light">
          <%= @child.program %>
        </div>

        <div class="profile-pic text-center">
          <% if @child.image.attached? %>
            <%= image_tag @child.image, style: "width: 200px; display: block; margin: 0 auto", class: "rounded-circle shadow" %>
          <% end %>
        </div> 

          <p class="mt-5 text-center">
            <%= @child.name %>
          </p>
      </div>
    </div>
    <div class="col-md-8">
      <%= render 'layouts/notice' %>
      
      <div class="row">
        <% if current_child %>
        <div class="col-md-12 col-lg-12">
          <p class="alert-warning p-3 rounded">
            Adding an Address allows the system to match you with the nearest teachers 
            or group for your children. 
            <%= link_to "Add Address", my_address_path, class: "text-info border-bottom border-info ml-2 font-weight-bold" %>
          </p>
        </div>
        <% end %>

        <% if current_child || current_admin %>
        <div class="col-md-12 col-lg-6 mb-4">
          <div class="bg-light px-3 rounded">
            <div class="d-flex align-items-center">
              <i class="far fa-envelope border rounded py-3 text-label px-3 mr-3"></i>
              <p class="pt-4 text-muted">
                <strong>Email</strong><br>
                <%= @child.email %>
              </p>
            </div>
          </div>
        </div>
          <div class="col-md-12 col-lg-6 mb-4">
            <div class="bg-light px-3 rounded">
              <div class="d-flex align-items-center">
                <i class="fas fa-phone-alt border rounded py-3 text-label px-3 mr-3"></i>
                <p class="pt-4 text-muted">
                  <strong>Phone</strong><br>
                  <% if @child.phone? %>
                    <%= @child.phone %>
                  <% else %>
                    Update your profile
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-12 col-lg-6 mb-4">
            <div class="bg-light px-3 rounded">
              <div class="d-flex align-items-center">
                <i class="fas fa-user border rounded py-3 text-label px-3 mr-3"></i>
                <p class="pt-4 text-muted">
                  <strong>Parent</strong><br>
                  <% if @child.guardian? %>
                    <%= @child.guardian %>
                  <% else %>
                    Update your profile
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="col-md-12 col-lg-6 mb-4">
          <div class="bg-light px-3 rounded">
            <div class="d-flex align-items-center">
              <i class="fas fa-graduation-cap border rounded py-3 text-label px-3 mr-3"></i>
              <p class="pt-4 text-muted">
                <strong>Class</strong><br>
                <% if @child.grade? %>
                  <%= @child.grade %>
                <% else %>
                  Update your profile.
                <% end %> 
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="d-flex flex-wrap mt-4 mb-5">
        <% if current_child || current_admin %>
          <%= link_to 'Update profile', edit_child_path(@child), class: "btn bg-green-btn text-white shadow px-5 py-3 mr-3 mb-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>