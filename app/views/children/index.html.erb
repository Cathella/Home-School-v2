<%= render "layouts/main-nav" %>

<div class="container py-5 dash-view">
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <h1 class="font-weight-bold text-label mb-3">Students in your area</h1>
  <p class="mb-5">Request to tutor a child in your area</p>

  <div class="row">
    <div class="col-md-10">
      <table class="child-table">
        <tbody>
          <% @children.each do |child| %>
            <tr>
              <td class="text-info"><%= child.name %></td>
              <td>
                <small class="text-label font-weight-bold">Class:</small><br>
                <%= child.grade %>
              </td>
              <td class="text-right">
                <%= link_to 'View Profile', child, class: "btn btn-info" %>
                <% if current_teacher %>
                  <%= link_to 'Request as Student', child, class: "btn btn-info ml-2" %>
                <% end %>
                <% if current_admin %>
                  <%= link_to 'Edit Child', edit_child_path(child), class: "btn btn-primary ml-2" %>
                  <%= link_to 'Delete Child', child, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger ml-2' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>