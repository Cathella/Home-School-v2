<%= render "layouts/childLoginLinks" %>

<p id="notice"><%= notice %></p>

<h1>Students in your area</h1>
<p>Request to tutor a child in your area</p>
<p>Search by grade, name or area</p><br />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.name %></td>
        <td><%= child.grade %></td>
        <td><%= child.group.name %></td>
        <td><%= link_to 'Show', child %></td>
        
        <% if current_admin %>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
