<%= form_with(model: child, local: true) do |form| %>
  <% if child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>

      <ul>
      <% child.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <% if current_child %>
      <div class="form-group col-md-12">
        <div class="field mb-3">
          <%= form.label :image, "Upload Profile Image", class: "mt-2" %>
          <%= form.file_field :image %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="field mb-3">
          <%= form.label :grade, "Class" %>
          <%= form.select :grade,  ['Primary One', 'Primary Two', 'Primary Three', 'Primary Four', 'Primary Five', 'Primary Six'], {}, class: "custom-select" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="field mb-3">
          <%= form.label :guardian, "Parent's Name", class: "mt-3" %>
          <%= form.text_field :guardian %>
        </div>
      </div>
    <% end %>
    <% if current_admin %>
    <div class="col-md-12">
      <div class="field mb-3">
        <%= form.label :group_id, "Choose a Group:", class: "mt-3" %>
        <%= form.collection_select(:group_id, Group.all, :id, :name, {}, { class: "custom-select" }) %>
      </div>
    </div>
    <% end %>
    <div class="col-md-12">
      <div class="actions">
        <%= form.submit "Complete Profile" %>
      </div>
    </div>
  </div>
<% end %>
