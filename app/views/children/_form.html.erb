<%= form_with(model: child, local: true) do |form| %>
  <% if child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>

      <ul>
      <% child.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-12">
      <div class="field mb-3">
        <%= form.text_field :name, placeholder: "Enter Full Name" %>
      </div>
    </div>

    <div class="form-group col-md-12">
      <div class="field mb-3">
        <%= form.text_field :phone, placeholder: "Enter Phone Number" %>
      </div>
    </div>

    <div class="form-group col-md-6">
      <div class="field">
        <%= form.password_field :password, placeholder: "Password" %>
      </div>
    </div>

    <div class="form-group col-md-6">
      <div class="field">
        <%= form.password_field :password_confirmation, placeholder: "Confirm Password" %>
      </div>
    </div>

    <div class="form-group col-md-12">
      <div class="field mb-3">
        <div class="row">
          <div class="col-md-6">
            <%= form.label :image, "Upload Profile Image", class: "mt-2" %>
          </div>
          <div class="col-md-6">
            <%= form.file_field :image %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Register your Child" %>
  </div>
<% end %>
