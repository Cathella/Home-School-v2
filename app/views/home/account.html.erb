      <div class="col-md-8 col-lg-5">
        <%= image_tag("jeremy-alford-ngOT6TG3qgs-unsplash.jpg", :alt => "", class: "img-fluid shadow", style: "border-radius: 1.6em 0 0 0;") %>  
      </div>

      <div class="col-md-8 col-lg-7">
