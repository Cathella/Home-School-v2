<%= render "layouts/main-nav" %>

<div class="container py-5 dash-view mt-4">
  <div class="row">
    <div class="col-md-4 pr-5">
      <div class="mb-5">
        <div class="profile-pic text-center">
          <% if current_teacher.image.attached? %>
            <%= image_tag current_teacher.image, style: "width: 200px; display: block; margin: 0 auto", class: "rounded-circle shadow" %>
          <% else %>
            <div class="text-center" style="font-size: 6em;">👩🏽‍🏫</div>
          <% end %>
        </div>

        <p class="text-center text-muted mt-5">
          <%= current_teacher.name %>
        </p>
      </div>
    </div>
    <div class="col-md-8">
      <%= render 'layouts/notice' %>
      
      <h2 class="font-weight-bold text-heading pb-3">My Group</h2>
      <div class="">
        <% if group_add %>
          <table class="child-table">
            <tbody>
              <tr>
                <td><%= link_to @group.name, @group, class: "text-info" %></td>
                  <td class="text-center"><%= @group.grade %></td>
                  <td class="text-center"><%= @group.place %></td>
                  <td class="text-right"><%= link_to "See Members", @group, class: "btn btn-info" %></td>
                </tr>
            </tbody>
          </table>
        <% else %>
          <p class="alert alert-warning">
            Sorry, You have not been allocated a group yet.
          </p>
        <% end %>
      </div>
    </div>
  </div>
  
</div>
