<%= render 'layouts/main-nav' %>
<div class="container py-5">
  <div class="row">
    <div class="col-lg-7 mx-auto">
      <p class="text-center text-muted fs-5">
        Welcome, 
        <% if current_teacher %>
          <%= current_teacher.full_name %>
        <% else %>
          <%= current_child.full_name %>
        <% end %>!
      </p>

      <% if current_child.address.present? %>
        <div class="bg-light rounded my-5 py-5 text-center border-bottom">
          <p class="text-muted mb-3 fs-5"><i class="fas mr-2 fa-map-marker-alt"></i>My Address</p>
          <p class="text-muted"><%= current_child.address.landmark %></p>
          <small><%= link_to "Change this address?", {}, class: "text-info" %></small>
        </div>

        <div class="mb-5">
          <%= link_to 'Continue to complete your profile<i class="fas ml-4 fa-arrow-right"></i>'.html_safe, {}, class: "btn btn-info w-100 py-3"%>
        </div>
      <% else %>
        <div class="bg-light rounded my-5 py-5 text-center w-75 mx-auto border-bottom">
          <p class="text-muted mb-4 fs-5 pb-4">Where do you live?</p>
          <%= link_to '<i class="fas mr-2 fa-map-marker-alt"></i>Add Address'.html_safe, new_child_address_path(current_child.id), class: "btn btn-info px-5 py-3 very-rounded" %>
        </div>
      <% end %>
    </div>
  </div>
</div>