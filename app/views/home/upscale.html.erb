<header class="bg-purple text-white">
  <section class="py-1" style="border-bottom: 1px solid rgba(255, 255, 255, 0.3)">
    <%= render 'layouts/nav' %>
  </section>

  <div class="container py-5">
    <div class="text-center">
      <div class="row mt-4">
        <div class="col-lg-9 mx-auto">
          <h1 class="font-weight-bold mt-5 mb-4" id="h1">Video Educational Resources Platform.</h1>
          <p class="opacity-75">Adapted from Homeschooling material provided by NCDC</p>
          <%= link_to 'Get started<i class="fas fa-arrow-right ml-3"></i>'.html_safe, videos_path, class: "btn bg-yellow mt-4 shadow rounded-pill text-label py-3 px-5", style: "font-size: 1.1em" %>
        </div>
      </div>
      <div class="row mt-5 mb-4">
        <section class="col-sm-6 col-md-3 col-lg-3 py-4">
          <i class="fas me-2 fs-3 mb-3 fa-star color-blue"></i>
          <p>High-quality content</p>
        </section>
        <section class="col-sm-6 col-md-3 col-lg-3 py-4">
          <i class="fas me-2 fs-3 mb-3 fa-book color-blue"></i>
          <p>Daily Content uploads</p>
        </section>
        <section class="col-sm-6 col-md-3 col-lg-3 py-4">
          <i class="fas me-2 fs-3 mb-3 fa-video color-blue"></i>
          <p>Captivating Videos</p>
        </section>
        <section class="col-sm-6 col-md-3 col-lg-3 py-4">
          <i class="fas me-2 fs-3 mb-3 fa-book-open color-blue"></i>
          <p>Well Explained Topics</p>
        </section>
      </div>
    </div>
  </div>
</header>

<div class="container py-5">
  <div class="">
    <a href="#" class="mr-4 btn bg-blue rounded-pill px-4">Recent</a>
    <a href="#" class="mr-4 btn">Week</a>
    <a href="#" class="mr-4 btn">Month</a>
    <a href="#" class="mr-4 btn">Year</a>
    <a href="#" class="btn"><i class="fas mr-2 color-red fa-lock"></i>Premium</a>
  </div>

