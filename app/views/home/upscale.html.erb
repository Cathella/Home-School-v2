  <div class="row my-5">
    <% @videos.each do |video| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <iframe class="w-100 rounded" style="height: 210px" src='https://www.youtube.com/embed/<%= video.youtube %>?rel=0&controls=0&color=white&modestbranding=1&autoplay=<%= params[:autoplay] || 0 %>' frameborder='0' allowfullscreen></iframe>
        <span class="mt-2 d-block"><%= link_to video.title, video, class: "text-dark" %></span>
        <small class="text-muted">Added &middot; <%= local_time_ago(video.created_at) %></small>
      </div>
    <% end %>
